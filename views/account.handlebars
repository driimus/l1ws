<!DOCTYPE html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>My account</title>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		>
		<meta name="description" content="User account details">
		<meta name="author" content="Cristian Petre">
		<link href="/css/style.css" type="text/css" rel="stylesheet">
		<link href="/css/gradients.css" type="text/css" rel="stylesheet">
		<link href="/bootstrap.min.css" type="text/css" rel="stylesheet">
		<link href="/fontawesome-free/css/all.css" rel="stylesheet">
	</head>
	<body>
		{{> header }}
		{{> notification }}
		<div class="container col-xs-12 col-sm-9 col-md-6 pb-5">
			<h1 class="text-center px-4 pt-4 pb-1">Account details</h1>
					<form action="/account" method="post" class="mb-4">
			<div class="card">
				<div class="row no-gutters overflow-hidden">
					<div class="col-xs-12 col-sm-6 col-md-4">
						{{#if isAdmin}}
							<div class="admin-badge text-white py-md-2 py-3">Admin</div>
						{{/if}}
						<div class="form-group m-3">
							<div class="image my-2">
								<img
									id="avatar"
									class="img-thumbnail rounded-circle p-0"
									src="{{avatar}}"
									title="Profile picture"
								>
							</div>
								<div class="custom-file mt-2">
									<input
										accepts="image/*"
										type="file"
										name="avatar"
										class="custom-file-input"
										onchange="loadPreview(event, 'avatar')"
										id="avatar"
									/>
									<label
										class="custom-file-label"
										id="hiddenLabel"
										for="avatar"
									>Change Avatar</label
									>
								</div>
							</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-8">
							<div class="card-body">
								<div class="row mb-2">
									<label for="inputEmail3" class="col-sm-3 pr-0 col-form-label">Username</label>
									<h4 class="col-sm-9 pl-0">
										<span class="badge badge-primary w-100">{{username}}</span>
									</h4>
								</div>
								<div class="form-group row">
									<label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
									<div class="col-sm-9 pl-0">
										<input
											type="email"
											class="form-control"
											name="email"
											id="inputEmail3"
											placeholder="Email"
											value="{{email}}"
											required
										/>
									</div>
								</div>
								<div class="form-group row">
									<div class="col-auto">Newsletter subscription</div>
									<div class="col-auto">
										<div class="custom-control custom-switch">
											<input
												type="checkbox"
												name="subscribed"
												class="custom-control-input"
												id="customSwitch1"
												{{#if subscribed}}checked value="true"{{/if}}
												onclick="this.value=this.checked"
											>
											<label class="custom-control-label" for="customSwitch1"></label>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<input
					type="submit"
					class="btn btn-success mt-2"
					value="Save changes"
				/>
			</form>
		</div>
		{{> footer }}
		<script type="text/javascript" src="/js/article/edit.js"></script>
		<script type="text/javascript" src="/jquery.js"></script>
		<script type="text/javascript" src="/bootstrap.min.js"></script>
	</body>
</html>
