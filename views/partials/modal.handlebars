<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Attach an Image</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body text-center">
				<div class="input-group">
					<div class="custom-file">
						<input type="file" accept="image/*" name="thumbnail" class="custom-file-input" id="imageFile" onchange="loadPreview(event, 'img-preview')">
						<label class="custom-file-label" for="imageFile">Choose image</label>
					</div>
					<div class="input-group-append">
						<input type="submit" class="input-group-text" value="Upload" onclick="uploadImage('imageFile', 'image-url')">
					</div>
				</div>
				<div class="card col col-md-6 mx-auto border-0 mt-2 mb-2">
					<img class="card-img-top" id="img-preview">
				</div>
				<div class="form-group pt-1">
					<label for="image-url">or enter an URL</label>
					<div class="input-group mb-2" id="image-url-container">
						<input type="text" class="form-control" name="image" placeholder="image url" id="image-url" required>
					  <div class="input-group-append" hidden>
					    <button class="input-group-text bg-danger text-white border-danger" id="basic-addon1" onclick="remove(this)" disabled>-</button>
					  </div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-outline-dark" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-dark" onclick="attachImage()">Confirm</button>
			</div>
		</div>
	</div>
</div>
