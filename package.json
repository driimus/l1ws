{
  "name": "localnews",
  "version": "1.5.1",
  "description": "Coursework with all the required features",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "jsdoc": "node_modules/.bin/jsdoc -c jsdoc.conf",
    "linter": "node_modules/.bin/eslint .",
    "test": "jest --coverage --detectOpenHandles && codecov --token=$CODECOV",
    "unit": "./node_modules/.bin/jest --coverage 'unit tests/'"
  },
  "jest": {
    "projects": [
      "<rootDir>/jest-test.config.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "*.spec.js",
      "docs/*",
      "coverage/*",
      "public/*"
    ],
    "delay": "2500"
  },
  "author": "petrec",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "bcrypt": "^3.0.6",
    "bcrypt-promise": "^2.0.0",
    "bootstrap": "^4.3.1",
    "fs-extra": "^7.0.1",
    "handlebars": "^4.5.1",
    "jquery": "^3.4.1",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-session": "^5.12.3",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.1",
    "markdown": "^0.5.0",
    "markdownlint-cli": "^0.18.0",
    "mime-types": "^2.1.24",
    "mock-fs": "^4.10.3",
    "nodemailer": "^6.3.1",
    "pg": "^7.12.1",
    "remark-cli": "^7.0.0",
    "remark-lint": "^6.0.5",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "remark-preset-lint-recommended": "^3.0.3"
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "cucumber": "^6.0.5",
    "eslint": "^5.15.2",
    "eslint-plugin-html": "^6.0.0",
    "faker": "^4.1.0",
    "handlebars-validate": "^0.1.2",
    "http-status-codes": "^1.4.0",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "jsdoc-route-plugin": "^0.1.0",
    "markdownlint": "^0.17.2",
    "nodemon": "^1.19.4",
    "puppeteer": "^2.0.0"
  }
}
